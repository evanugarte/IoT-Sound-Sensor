{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "plugin:react/recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "react/prop-types": 0,
        "no-unused-vars": [
            "error", 
            { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }
        ],
        "space-before-blocks": [
            "error", 
            { "functions": "always", "keywords": "always", "classes": "always" }
        ],
        "space-before-function-paren": [
            "error", "never"
        ],
        "no-console": [
            "error", 
            { "allow": ["warn", "error"] }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "parser": "babel-eslint"
}